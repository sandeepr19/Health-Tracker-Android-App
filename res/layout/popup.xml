<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="fill_parent"
    android:orientation="vertical" android:layout_margin="10dip" >

    <TextView
        android:text="Congratulations!!!"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
       android:text="You completed this weeks goal. Now you can share it on Facebook."
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button" android:background="@drawable/facebook_icon_copy"
        android:layout_width="wrap_content" android:layout_margin=" 10dip"
        android:layout_height="wrap_content" android:layout_gravity="right"  android:gravity="right"/>

</LinearLayout>